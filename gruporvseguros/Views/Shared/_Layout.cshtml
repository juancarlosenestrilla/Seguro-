                    <h5 class="text-light mb-4">Links Rapidos</h5>
                    <a class="btn btn-link" href="">Staff</a>
                    <a class="btn btn-link" href="@Url.Action("Contactanos","Home")">Contactanos</a>
                    <a class="btn btn-link" href="">Galería</a>
                    <a class="btn btn-link" href="@Url.Action("Privacidad","Home")">Aviso de Privacidad</a>
                </div>
            </div>
        </div>
        <div class="container-fluid copyright">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                        <a href="#">Seguros de Vida, Grupo RV</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Back to Top -->
    <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top">
        <i class="bi bi-arrow-up"></i>
    </a>
    <!-- Footer End -->
    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
